<div class="page-header">
  <h1>Listing tweets</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Date</th>
            <th>User</th>
            <th>Body</th>
            <th>Link</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tweets) do |tweet| %>
            <td><%= tweet.date %></td>
            <td><a href="https://twitter.com/gachallenge"><%= tweet.user %></a></td>
            <td><%= tweet.body %></td>
            <td><a href="<%= tweet.link %>"><%= tweet.link %></a></td>
            <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
