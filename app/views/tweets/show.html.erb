<div class="page-header">
  <%= link_to tweets_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_tweet_path(@tweet), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show tweet</h1>
</div>

<dl class="dl-horizontal">
  <dt>Date:</dt>
  <dd><%= @tweet.date %></dd>

  <dt>User:</dt>
  <dd><%= @tweet.user %></dd>

  <dt>Body:</dt>
  <dd><%= @tweet.body %></dd>

  <dt>Link:</dt>
  <dd><%= @tweet.link %></dd>

</dl>
